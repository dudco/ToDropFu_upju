<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/regContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.todropfu.RegisterActivity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:paddingTop="30dp"
            android:src="@drawable/logo_signup" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reg_textInputStoreName"
                style="@style/AppTheme.Opp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/reg_editStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="상점 이름"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reg_textInputType"
                style="@style/AppTheme.Opp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/reg_editType"
                    style="@style/AppTheme.Opp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="취급 풉목"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkInApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Opp" />
                <TextView
                    android:id="@+id/inapp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="인앱 결제"
                    android:gravity="center"
                    android:textColor="@color/md_white_1000"/>
                <CheckBox
                    android:id="@+id/checkCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Opp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"/>
                <TextView
                    android:id="@+id/isCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="신용 카드 결제"
                    android:gravity="center"
                    android:textColor="@color/md_white_1000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/btnToBack"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_back"
                style="@style/Widget.AppCompat.Button"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_signup_back"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="-10dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="뒤로 가기"
                    android:gravity="center"
                    android:textColor="@color/md_white_1000"/>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/btnToNext"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_login"
                style="@style/Widget.AppCompat.Button"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="가입 완료"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_signup_next"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="-10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>