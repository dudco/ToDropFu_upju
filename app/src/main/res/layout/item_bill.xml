<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="bill"
            type="com.todropfu_upju.BillFragment.BillData"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="3dp">
        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billGuide"
                app:layout_constraintGuide_begin="142dp"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/billTitleImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/billGuide"
                android:background="#49000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/billGuide"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                >
                <ImageView
                    android:id="@+id/truckImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_truck"/>
                <TextView
                    android:id="@+id/itemBillTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@{bill.storeName}"
                    tools:text="따듯한 트럭"
                    android:textSize="22sp"
                    android:font='@{"nbg_bold"}'
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/priceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/billGuide"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금액"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:font='@{"nbg_light"}'/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{bill.price}"
                        tools:text="2,000"
                        android:textSize="20sp"
                        android:shadowColor="@color/md_black_1000"
                        android:font='@{"nbg_normal"}'/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/md_black_1000"
                        android:font='@{"nbg_ulight"}'/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매 날짜"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:font='@{"nbg_light"}'/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{bill.year}"
                        tools:text="2017"
                        android:textSize="20sp"
                        android:shadowColor="@color/md_black_1000"
                        android:font='@{"nbg_normal"}'/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="년"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/md_black_1000"
                        android:font='@{"nbg_ulight"}'/>

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{bill.month}"
                        tools:text="5"
                        android:textSize="20sp"
                        android:shadowColor="@color/md_black_1000"
                        android:font='@{"nbg_normal"}'/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/md_black_1000"
                        android:font='@{"nbg_ulight"}'/>

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{bill.day}"
                        tools:text="23"
                        android:textSize="20sp"
                        android:shadowColor="@color/md_black_1000"
                        android:font='@{"nbg_normal"}'/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/md_black_1000"
                        android:font='@{"nbg_ulight"}'/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                app:layout_constraintLeft_toLeftOf="@id/billGuide"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/priceContainer"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/line"
                app:layout_constraintLeft_toLeftOf="@id/billGuide"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매한 품목"
                    android:textSize="7sp"
                    android:font='@{"nbg_normal"}'/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{bill.title}"
                    tools:text="트럭마을산 두부"
                    android:textSize="14sp"
                    android:font='@{"nbg_normal"}'
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>